#cevap_1
for i in range(1,11):
    print(i)


#cevap_2
#for_dongusu
sayi = int(input("Bir sayı girin: "))

print("Çift sayılar (for ile):")
for i in range(2, sayi + 1, 2):
    print(i)

#while_dongusu
sayi = int(input("Bir sayı girin: "))

print("Çift sayılar (while ile):")
i = 2
while i <= sayi:
    print(i)
    i += 2


#cevap_3
baslangic = int(input("Başlangıç değerini girin: "))
bitis = int(input("Bitiş değerini girin: "))

print("Sayılar:")
for i in range(baslangic, bitis + 1):
    print(i)

